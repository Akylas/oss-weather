{
  "$schema": "../schema.json",
  "name": "DailyWeatherWidget",
  "displayName": "Daily Forecast",
  "description": "Shows daily weather forecast with high/low temperatures",
  "supportedSizes": [
    { "width": 260, "height": 120, "family": "medium" },
    { "width": 360, "height": 180, "family": "large" }
  ],
  "defaultPadding": 8,
  "background": {
    "type": "solid",
    "color": "widgetBackground"
  },
  "variants": [
    {
      "condition": "size.height <= 150",
      "layout": {
        "type": "column",
        "alignment": "start",
        "crossAlignment": "stretch",
        "padding": 8,
        "spacing": 8,
        "children": [
          {
            "type": "label",
            "text": "{{locationName}}",
            "fontSize": 14,
            "color": "onSurfaceVariant",
            "maxLines": 1
          },
          {
            "type": "column",
            "spacing": 0,
            "children": [
              {
                "type": "forEach",
                "items": "dailyData",
                "limit": 3,
                "itemTemplate": {
                  "type": "row",
                  "alignment": "center",
                  "crossAlignment": "center",
                  "spacing": 8,
                  "paddingVertical": 2,
                  "children": [
                    {
                      "type": "label",
                      "text": "{{item.day}}",
                      "fontSize": 12,
                      "fontWeight": "medium",
                      "color": "onSurface",
                      "flex": 1
                    },
                    {
                      "type": "image",
                      "src": "{{item.iconPath}}",
                      "size": 28
                    },
                    {
                      "type": "row",
                      "alignment": "end",
                      "spacing": 6,
                      "flex": 1,
                      "children": [
                        {
                          "type": "label",
                          "text": "{{item.precipAccumulation}}",
                          "fontSize": 10,
                          "color": "onSurfaceVariant",
                          "visibleIf": "item.precipAccumulation"
                        },
                        {
                          "type": "row",
                          "spacing": 4,
                          "children": [
                            {
                              "type": "label",
                              "text": "{{item.temperatureHigh}}",
                              "fontSize": 13,
                              "fontWeight": "bold",
                              "color": "onSurface"
                            },
                            {
                              "type": "label",
                              "text": "{{item.temperatureLow}}",
                              "fontSize": 13,
                              "color": "onSurfaceVariant"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              }
            ]
          }
        ]
      }
    }
  ],
  "layout": {
    "type": "column",
    "alignment": "start",
    "crossAlignment": "stretch",
    "padding": 8,
    "spacing": 8,
    "children": [
      {
        "type": "label",
        "text": "{{locationName}}",
        "fontSize": 14,
        "color": "onSurfaceVariant",
        "maxLines": 1
      },
      {
        "type": "column",
        "spacing": 0,
        "children": [
          {
            "type": "forEach",
            "items": "dailyData",
            "limit": 5,
            "itemTemplate": {
              "type": "row",
              "alignment": "center",
              "crossAlignment": "center",
              "spacing": 8,
              "paddingVertical": 2,
              "children": [
                {
                  "type": "label",
                  "text": "{{item.day}}",
                  "fontSize": 12,
                  "fontWeight": "medium",
                  "color": "onSurface",
                  "flex": 1
                },
                {
                  "type": "image",
                  "src": "{{item.iconPath}}",
                  "size": 28
                },
                {
                  "type": "row",
                  "alignment": "end",
                  "spacing": 6,
                  "flex": 1,
                  "children": [
                    {
                      "type": "label",
                      "text": "{{item.precipAccumulation}}",
                      "fontSize": 10,
                      "color": "onSurfaceVariant",
                      "visibleIf": "item.precipAccumulation"
                    },
                    {
                      "type": "row",
                      "spacing": 4,
                      "children": [
                        {
                          "type": "label",
                          "text": "{{item.temperatureHigh}}",
                          "fontSize": 13,
                          "fontWeight": "bold",
                          "color": "onSurface"
                        },
                        {
                          "type": "label",
                          "text": "{{item.temperatureLow}}",
                          "fontSize": 13,
                          "color": "onSurfaceVariant"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ]
  }
}
