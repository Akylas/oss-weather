{
  "$schema": "../schema.json",
  "name": "SimpleWeatherWidget",
  "displayName": "Simple Weather",
  "description": "Shows current temperature, weather icon, and location",
  "supportedSizes": [
    { "width": 50, "height": 50, "family": "small" },
    { "width": 80, "height": 80, "family": "small" },
    { "width": 120, "height": 120, "family": "small" },
    { "width": 260, "height": 120, "family": "medium" }
  ],
  "defaultPadding": 8,
  "background": {
    "type": "solid",
    "color": "widgetBackground"
  },
  "layout": {
    "type": "column",
    "alignment": "center",
    "crossAlignment": "center",
    "children": [
      {
        "type": "conditional",
        "condition": "size.width >= 80",
        "then": {
          "type": "label",
          "text": "{{locationName}}",
          "fontSize": {
            "if": [
              { "condition": "size.width >= 200", "value": 16 },
              { "default": 12 }
            ]
          },
          "color": "onSurfaceVariant",
          "textAlign": "center",
          "maxLines": 1
        }
      },
      {
        "type": "spacer",
        "flex": {
          "if": [
            { "condition": "size.width < 200", "value": 1 }
          ]
        },
        "size": {
          "if": [
            { "condition": "size.width >= 200", "value": 8 }
          ]
        }
      },
      {
        "type": "image",
        "src": "{{iconPath}}",
        "size": {
          "if": [
            { "condition": "size.width < 80", "value": 32 },
            { "condition": "size.width < 200", "value": 48 },
            { "default": 72 }
          ]
        },
        "visibleIf": "iconPath"
      },
      {
        "type": "spacer",
        "flex": {
          "if": [
            { "condition": "size.width >= 80 && size.width < 200", "value": 1 }
          ]
        },
        "size": {
          "if": [
            { "condition": "size.width < 80", "value": 4 },
            { "condition": "size.width >= 200", "value": 8 }
          ]
        }
      },
      {
        "type": "label",
        "text": "{{temperature}}",
        "fontSize": {
          "if": [
            { "condition": "size.width < 80", "value": 14 },
            { "condition": "size.width < 200", "value": 32 },
            { "default": 48 }
          ]
        },
        "fontWeight": "bold",
        "color": "onSurface",
        "textAlign": "center"
      },
      {
        "type": "spacer",
        "size": 4,
        "visibleIf": "size.width < 80 || size.width >= 200"
      },
      {
        "type": "label",
        "text": "{{locationName}}",
        "fontSize": 8,
        "color": "onSurfaceVariant",
        "textAlign": "center",
        "maxLines": 1,
        "visibleIf": "size.width < 80"
      },
      {
        "type": "label",
        "text": "{{description}}",
        "fontSize": 14,
        "color": "onSurfaceVariant",
        "textAlign": "center",
        "visibleIf": "description && size.width >= 200"
      }
    ]
  }
}
