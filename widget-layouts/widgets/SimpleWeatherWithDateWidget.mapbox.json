{
  "$schema": "../schema.json",
  "name": "SimpleWeatherWithDateWidget",
  "displayName": "Weather with Date",
  "description": "Shows current date, temperature, weather icon, and location",
  "supportedSizes": [
    { "width": 80, "height": 50, "family": "small" },
    { "width": 120, "height": 80, "family": "small" },
    { "width": 260, "height": 120, "family": "medium" }
  ],
  "defaultPadding": 6,
  "background": {
    "type": "solid",
    "color": "widgetBackground"
  },
  "layout": {
    "type": "column",
    "alignment": "center",
    "crossAlignment": "center",
    "padding": ["case",
      ["<", ["get", "size.height"], 60], 2,
      ["<", ["get", "size.height"], 80], 4,
      6
    ],
    "spacing": 0,
    "children": [
      {
        "type": "date",
        "style": "date",
        "fontSize": ["case",
          ["<", ["get", "size.height"], 60], 10,
          ["<", ["get", "size.height"], 80], 12,
          14
        ],
        "color": "onSurfaceVariant"
      },
      { "type": "spacer", "flex": 1 },
      {
        "type": "row",
        "alignment": "center",
        "crossAlignment": "center",
        "spacing": ["case",
          ["<", ["get", "size.height"], 60], 4,
          8
        ],
        "children": [
          {
            "type": "image",
            "src": ["get", "iconPath"],
            "size": ["case",
              ["<", ["get", "size.height"], 60], 24,
              ["<", ["get", "size.height"], 80], 32,
              40
            ],
            "visibleIf": ["has", "iconPath"]
          },
          {
            "type": "label",
            "text": ["get", "temperature"],
            "fontSize": ["case",
              ["<", ["get", "size.height"], 60], 16,
              ["<", ["get", "size.height"], 80], 20,
              24
            ],
            "fontWeight": "bold",
            "color": "onSurface"
          }
        ]
      },
      { "type": "spacer", "flex": 1 },
      {
        "type": "label",
        "text": ["get", "locationName"],
        "fontSize": ["case",
          ["<", ["get", "size.height"], 60], 9,
          ["<", ["get", "size.height"], 80], 11,
          12
        ],
        "color": "onSurfaceVariant",
        "maxLines": 1
      }
    ]
  }
}
